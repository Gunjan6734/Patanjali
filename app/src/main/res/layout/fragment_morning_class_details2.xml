<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroungimag"
    tools:context=".fregment.morningclasdetail2.MorningClassDetails2Fragment">

    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:elevation="15dp"
                app:cardMaxElevation="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/textcolor6">

                    <FrameLayout
                        android:id="@+id/fram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/classname03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor02"
                            android:text="IX - X Science [Morning Batch]"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/goalsidtext3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="280dp"
                            android:text="0"
                            android:visibility="gone"
                            android:textColor="@color/textcolor3"
                            android:textSize="12sp"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fram2"
                        android:layout_below="@+id/fram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/bredcrumbs03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor2"
                            android:text="Secondary Stage = Class IX - X"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fram3"
                        android:layout_below="@+id/fram2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Online Seats"
                                    android:textColor="@color/textcolor4"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/onlnsetstext03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="20dp"
                                    android:text="27/30"
                                    android:textColor="@color/textcolor3"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="10dp"
                                    android:text="Fees"
                                    android:textColor="@color/textcolor4"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/onlnfeetext03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="15dp"
                                    android:text="Rs.00.00"
                                    android:textColor="@color/textcolor3"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>


                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fram5"
                        android:layout_below="@+id/fram3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textcolor4"
                                    android:text="Class Date"
                                    android:layout_marginLeft="10dp"
                                    android:layout_alignParentLeft="true"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/clsdatetxt03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textcolor3"
                                    android:text="10/02/2020"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="20dp"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textcolor4"
                                    android:text="Class Time"
                                    android:layout_marginLeft="10dp"
                                    android:layout_alignParentLeft="true"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/clastimtext03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textcolor3"
                                    android:text="10:00 AM"
                                    android:layout_marginRight="15dp"
                                    android:layout_alignParentRight="true"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </FrameLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_below="@+id/fram5"
                        android:layout_width="fill_parent"
                        android:layout_height="1.5dp"
                        android:background="#fdcccbca"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="15dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/linearout0"
                        android:layout_below="@+id/view"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableLayout
                            android:id="@+id/tablelayout"
                            android:layout_width="fill_parent"
                            android:layout_height="25sp"
                            android:stretchColumns="0,1,2,3,4"
                            android:gravity="center">

                            <TableRow
                                android:id="@+id/rowtabl"
                                android:background="#000000"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_margin="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="match_parent"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text=" # "
                                    android:textColor="@color/textcolor2"
                                    android:textSize="12sp"
                                    android:layout_margin="1dp"
                                    android:layout_column="0"
                                    android:background="#FFFFFF"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Subject"
                                    android:textColor="@color/textcolor2"
                                    android:textSize="12sp"
                                    android:layout_margin="1dp"
                                    android:layout_column="1"
                                    android:background="#FFFFFF"
                                    android:gravity="center"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_margin="1dp"
                                    android:background="#FFFFFF"
                                    android:gravity="center"
                                    android:text="Teacher"
                                    android:textColor="@color/textcolor2"
                                    android:textSize="12sp"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Class"
                                    android:textColor="@color/textcolor2"
                                    android:textSize="12sp"
                                    android:layout_margin="1dp"
                                    android:background="#FFFFFF"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:layout_column="3" />

                                <TextView
                                    android:layout_width="45dp"
                                    android:layout_height="match_parent"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Duration"
                                    android:textColor="@color/textcolor2"
                                    android:textSize="12sp"
                                    android:layout_margin="1dp"
                                    android:background="#FFFFFF"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:layout_column="4" />

                            </TableRow>

                        </TableLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:listSelector="@color/colorgreen"
                            android:choiceMode="singleChoice"
                            android:id="@+id/listviewsubject"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_below="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="15dp"
                android:elevation="15dp"
                app:cardMaxElevation="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
