<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/textcolor6"
        android:padding="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3">
                <TextView
                    android:textSize="16sp"
                    android:id="@+id/fd_name"
                    android:textStyle="bold"
                    android:textColor="@color/Blacki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/fd_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
               <!-- <TextView
                    android:textSize="14sp"
                    android:id="@+id/fd_create"
                    android:layout_gravity="start"
                    android:paddingLeft="8dp"
                    android:text="dfsagfdsa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/view_fd"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="24dp"
                    android:paddingTop="8dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:text="View"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/view_fd2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="24dp"
                    android:paddingTop="8dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:text="View"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/view_fd3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="24dp"
                    android:paddingTop="8dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:text="View"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>