<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notifydate"
        android:textSize="12sp"
        android:textStyle="normal"
        android:text="26th jun 2020"
        android:layout_marginLeft="15dp"
        android:textColor="@color/Blacki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/notifydate"
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorrgray2"/>


    <androidx.cardview.widget.CardView
        android:layout_below="@+id/view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/demoshowlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorrgray2"
            android:padding="8sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/demonotifyicons"
                    android:src="@drawable/teachericon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:background="@color/colorrgray2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/demonotififytitle"
                        android:textSize="10sp"
                        android:textStyle="normal"
                        android:text="bfhsfhmfd"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textColor="@color/Blacki"
                        android:maxLines="2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/demonotifynewbutton"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="NEW"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fullmsgshowlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/colorWhite"
            android:padding="8sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/notifyicons"
                    android:src="@drawable/teachericon"
                    android:layout_alignParentLeft="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <LinearLayout
                    android:id="@+id/linear"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:background="@color/colorrgray2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/notififytitle"
                        android:textSize="10sp"
                        android:textStyle="normal"
                        android:text="bfhsfhmfd"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textColor="@color/Blacki"
                        android:maxLines="2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/notifynewbutton"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="NEW"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/linear"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/notififyfulltitle"
                        android:textSize="10sp"
                        android:textStyle="normal"
                        android:text="bdnvbn"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textColor="@color/Blacki"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

